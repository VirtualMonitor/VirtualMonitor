 VMMLibDTrace_INST    = $(VBOX_INST_DTRACE_LIB)$(KBUILD_TARGET_ARCH)/
 VMMLibDTrace_SOURCES = \
	dtrace/lib/vbox-types.d \
	dtrace/lib/$(KBUILD_TARGET_ARCH)/vbox-arch-types.d \
	$(VMMLibDTrace_0_OUTDIR)/vm.d \
